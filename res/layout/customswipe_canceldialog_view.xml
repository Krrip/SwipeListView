<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cancel_dialog_height"
    android:alpha="0.9"
    android:background="@drawable/customswipe_canceldialog_shape"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/cancel_dialog_message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:text="item已被删除"
        android:textColor="@android:color/white"
        android:textSize="@dimen/cancel_dialog_textview_size" 
        android:paddingLeft="10dp"
        />

    <Button
        android:id="@+id/cancel_dialog_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="撤销"
        android:textColor="@color/blue"
        android:textSize="@dimen/cancel_dialog_textview_size" />

</LinearLayout>